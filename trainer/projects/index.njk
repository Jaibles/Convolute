---
title: Projects
---


{% extends "_includes/app-trainer.njk" %}
 
{% block title %}Projects{% endblock %}
 
{% block content %}
  <ul class="divide-y divide-gray-100 border border-gray-100 rounded">
    {%- for project in collections.project | reverse -%}
      <li {% if page.url == project.url %} class="bg-cobalt-50 hover:bg-cobalt-50"{% endif %}>
        <a href="{{ project.url }}" class="block hover:bg-gray-50">
          <div class="px-4 py-3 sm:px-4 items-center">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-black truncate {% if page.url == project.url %}text-cobalt-500{% endif %}">
                  {{ project.data.title }}
                </p>
                <div class="mt-1 sm:flex sm:justify-between">
                  <div class="sm:flex">
                    <p class="flex font-mono items-center text-xs text-gray-500">
                      <time datetime="{{ date }}">Created: {{ project.data.datecreated.toUTCString() }}</time>
                    </p>
                  </div>
                </div>
              </div>

              <div class="flex">
                <div class="ml-2 flex-shrink-0 flex tooltip">
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm bg-gray-100 text-gray-800">
                    <svg class="-ml-1 mr-1.5 h-2 w-2 text-gray-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                    </svg>
                    <span class="mt-0.5">{{ project.data.tasksCount }}</span>
                  </span>
                  <span class='tooltip-text bg-gray-200 p-3 -mt-6 text-xs -ml-6 rounded'>{{ project.data.tasksCount }} Tasks</span>
                </div>

                <div class="ml-2 flex-shrink-0 flex tooltip">
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm bg-mosque-100 text-mosque-800">
                    <svg class="-ml-1 mr-1.5 h-2 w-2 text-mosque-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                    </svg>
                    <span class="mt-0.5">{{ project.data.tasksCompleted }}</span>
                  </span>
                  <span class='tooltip-text bg-mosque-200 p-3 -mt-6 text-xs -ml-6 rounded'>{{ project.data.tasksCompleted }} Completed</span>
                </div>

                <div class="ml-2 flex-shrink-0 flex tooltip">
                  <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm bg-orange-100 text-orange-800">
                    <svg class="-ml-1 mr-1.5 h-2 w-2 text-orange-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                    </svg>
                    <span class="mt-0.5">18</span>
                  </span>
                  <span class='tooltip-text bg-orange-200 p-3 -mt-6 text-xs -ml-6 rounded'>18 Queued</span>
                </div>

                <button type="button" class="mx-6 inline-flex items-center bg-transparent text-sm text-cobalt-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cobalt-500">
                  Start
                </button>

              </div>
            </div>
          </div>
        </a>
      </li>
    {%- endfor -%}
  </ul>
{% endblock %}
